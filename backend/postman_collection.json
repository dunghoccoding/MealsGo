{
  "info": {
    "name": "Đặc Sản Việt Nam API",
    "description": "API collection for Vietnamese Food Delivery App",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Nguyễn Văn Test\",\n  \"email\": \"test@gmail.com\",\n  \"password\": \"123456\",\n  \"phone\": \"0987654321\",\n  \"role\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Vendor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Trần Thị Vendor\",\n  \"email\": \"vendor.test@gmail.com\",\n  \"password\": \"123456\",\n  \"phone\": \"0912345678\",\n  \"role\": \"VENDOR\",\n  \"storeName\": \"Quán Test\",\n  \"storeAddress\": \"123 Test Street, Hanoi\",\n  \"region\": \"NORTH\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login Vendor Hanoi",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token saved:', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor.hanoi@dacsan.vn\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Products by Region (North)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?region=NORTH",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "region",
                  "value": "NORTH"
                }
              ]
            }
          }
        },
        {
          "name": "Search Products (Phở)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?search=phở",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "search",
                  "value": "phở"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID (with Variants)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "1"]
            }
          }
        },
        {
          "name": "Get Featured Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/featured",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "featured"]
            }
          }
        },
        {
          "name": "Get Best Sellers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/best-sellers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "best-sellers"]
            }
          }
        },
        {
          "name": "Create Product (Vendor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bún Riêu Cua\",\n  \"description\": \"Bún riêu cua đồng ngon tuyệt\",\n  \"basePrice\": 45000,\n  \"region\": \"NORTH\",\n  \"category\": \"MAIN_DISH\",\n  \"images\": [],\n  \"available\": true,\n  \"featured\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Update Product (Vendor)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"basePrice\": 50000,\n  \"featured\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "10"]
            }
          }
        },
        {
          "name": "Delete Product (Vendor)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "10"]
            }
          }
        }
      ]
    },
    {
      "name": "Vendors",
      "item": [
        {
          "name": "Get All Vendors",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vendors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vendors"]
            }
          }
        },
        {
          "name": "Get Vendors by Region (North)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vendors?region=NORTH",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vendors"],
              "query": [
                {
                  "key": "region",
                  "value": "NORTH"
                }
              ]
            }
          }
        },
        {
          "name": "Get Vendor by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vendors/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vendors", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Actuator Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        }
      ]
    }
  ]
}
